    <version>1.1.1</version>
  </skin>

  <body>
    <head>
      <style>
        footer { padding-top: 5px!important; padding-bottom: 5px!important; margin-top: 30px!important }
        div.subfooter { padding-top: 20px!important; padding-bottom: 10px!important }
        p.copyright { display: none }
      </style>
    </head>

    <menu name="About">
      <item name="Home" href="index.html" />
      <item name="Processing Model" href="model.html" />
      <item name="Publications" href="publications.html" />
    </menu>

    <menu name="Tool">
      <item name="Installation" href="install.html" />
      <item name="Usage" href="usage.html" />
      <item name="Example (SemDev)" href="example.html" />
      <item name="Examples (SAC)" href="examples_sac.html" />
